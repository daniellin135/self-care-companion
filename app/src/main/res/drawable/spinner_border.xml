<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border and background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dp" android:color="#A9A9A9"/>
            <corners android:radius="8dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="40dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Dropdown arrow icon (right side) -->
    <item android:drawable="@android:drawable/arrow_down_float" android:gravity="right"/>
</layer-list>
