<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Home Button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/button"
                android:src="@drawable/ic_home_black_24dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/title_home"/>
        </FrameLayout>

        <!-- Check-In Title -->
        <TextView
            android:id="@+id/text_mood"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:textAllCaps="true" />

        <!-- Prompt -->
        <TextView
            android:id="@+id/prompt_mood"
            style="@style/TextPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/mood_prompt" />

        <!-- Mood Options -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:gravity="center">

            <Button
                android:id="@+id/mood1btn"
                style="@style/TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="@string/mood_option_1"
                android:textColor="#212121"
                android:backgroundTint="@color/button" />

            <Button
                android:id="@+id/mood2btn"
                style="@style/TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="@string/mood_option_2"
                android:textColor="#212121"
                android:backgroundTint="@color/button" />

            <Button
                android:id="@+id/mood3btn"
                style="@style/TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="@string/mood_option_3"
                android:textColor="#212121"
                android:backgroundTint="@color/button" />

            <Button
                android:id="@+id/mood4btn"
                style="@style/TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="@string/mood_option_4"
                android:textColor="#212121"
                android:backgroundTint="@color/button" />

            <Button
                android:id="@+id/mood5btn"
                style="@style/TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="@string/mood_option_5"
                android:textColor="#212121"
                android:backgroundTint="@color/button" />

            <Button
                android:id="@+id/mood6btn"
                style="@style/TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="@string/mood_option_6"
                android:textColor="#212121"
                android:backgroundTint="@color/button" />
        </GridLayout>

        <!-- Spacing -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Next Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/nextButton"
                style="@style/TextButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/next_button"
                android:textColor="#212121"
                android:backgroundTint="@color/button"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Bottom Padding -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
</ScrollView>
