<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F1"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <!-- Profile Title -->
        <TextView
            android:id="@+id/titleText"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/btn_view_insights"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CED1F8"
            android:textColor="#000000"
            android:text="VIEW INSIGHTS"
            android:layout_marginTop="90dp"/> <!-- space from button 1 -->

        <Button
            android:id="@+id/btn_notifications"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTIFICATIONS"
            android:backgroundTint="#CED1F8"
            android:textColor="#000000"
            android:layout_marginTop="30dp" /> <!-- space from button 1 -->

        <Button
            android:id="@+id/btn_settings"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:backgroundTint="#CED1F8"
            android:textColor="#000000"
            android:layout_marginTop="30dp" /> <!-- more space from button 2 -->

        <Button
            android:id="@+id/btn_help_support"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELP AND SUPPORT"
            android:backgroundTint="#CED1F8"
            android:textColor="#000000"
            android:layout_marginTop="30dp"/> <!-- a lil space from button 3 -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
